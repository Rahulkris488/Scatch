<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20 gap-10">

  <!-- LEFT: Delivery Details -->
  <div class="w-[50%] bg-white rounded-md p-10 shadow-md">
    <h2 class="text-2xl font-semibold mb-6">Delivery Details</h2>

    <form action="/placeorder" method="POST" class="flex flex-col gap-4">
      <input type="text" name="name" placeholder="Full Name" class="border px-4 py-2 rounded-md" required>
      <input type="email" name="email" placeholder="Email Address" class="border px-4 py-2 rounded-md" required>
      <input type="text" name="phone" placeholder="Phone Number" class="border px-4 py-2 rounded-md" required>
      <textarea name="address" placeholder="Full Delivery Address" rows="4" class="border px-4 py-2 rounded-md" required></textarea>

      <select name="paymentMethod" class="border px-4 py-2 rounded-md">
        <option value="cod">Cash on Delivery</option>
        <option value="upi">UPI</option>
        <option value="card">Credit/Debit Card</option>
      </select>

      <button type="submit" class="bg-green-500 text-white px-6 py-3 rounded-md mt-4">Place Order</button>
    </form>
  </div>

  <!-- RIGHT: Price Breakdown -->
  <div class="w-[50%]">
    <h3 class="text-xl font-semibold">Order Summary</h3>
    <div class="px-10 mt-5">
      <div class="flex mt-2">
        <h4 class="w-1/3">Total MRP</h4>
        <h4>₹ <%= totalAmount %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Discount</h4>
        <h4>₹ <%= discount %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Platform Fee</h4>
        <h4>₹ <%= platformFee %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Shipping</h4>
        <h4><%= shippingFee === 0 ? "FREE" : `₹ ${shippingFee}` %></h4>
      </div>
    </div>

    <div class="w-full h-[1px] bg-black mt-10"></div>

    <div class="flex mt-5 px-10">
      <h3 class="w-1/3 text-xl">Grand Total</h3>
      <h3 class="font-semibold text-xl text-green-600">₹ <%= grandTotal %></h3>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
