<%- include('./partials/header') %>

<div class="bg-[#F9FAFB]">
  <% if(success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500">
      <span class="text-white"><%= success %></span>
    </div>
  <% } %>

  <% if(error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500">
      <span class="text-white"><%= error %></span>
    </div>
  <% } %>

  <div class="w-full flex px-20 py-20 gap-10">
    
    <!-- Sidebar -->
    <div class="w-[25%] flex flex-col">
      <div class="flex items-center gap-2">
        <h3>Sort by</h3>
        <form action="/shop">
          <select class="border px-2 py-1" name="sortby">
            <option value="popular">Popular</option>
            <option value="newest">Newest</option>
          </select>
        </form>
      </div>

      <div class="flex flex-col mt-20">
        <a class="mb-2" href="">New Collection</a>
        <a class="mb-2" href="">All Products</a>
        <a class="mb-2" href="">Discounted Products</a>
      </div>

    </div>

    <!-- Products Grid -->
    <div class="w-[75%]">
      <div class="grid grid-cols-5 gap-6">
        <% products.forEach(function(product) { %>
          <div class="bg-white rounded-md shadow-sm overflow-hidden">
            <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
              <img class="h-[12rem]" src="/<%= product.image %>" alt="">
            </div>
            <div class="flex justify-between items-center px-4 py-3 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
              <div>
                <h3 class="font-semibold text-sm"><%= product.name %></h3>
                <h4 class="text-xs">â‚¹ <%= product.price %></h4>
              </div>
              <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product._id %>">
                <i class="ri-add-line"></i>
              </a>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

  </div>
</div>

<%- include('./partials/footer') %>
