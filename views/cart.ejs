<%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20 gap-10">

  <!-- LEFT: Cart Products -->
  <div class="w-[30%] rounded-md overflow-hidden">
    <% product.forEach((product) => { %>
      <div class="w-full flex justify-center items-center h-80 bg-[#222]">
        <img class="h-[20rem]" src="/<%= product.image %>" alt="">
      </div>

      <div class="w-full flex justify-between px-5 py-4">
        <h3 class="text-2xl"><%= product.name %></h3>
        <div class="flex items-center gap-2">
          <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
          <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
          <a href="" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></a>
        </div>
      </div>

      <div class="flex items-center justify-between px-5 py-3">
        <h4 class="text-lg">Net Total</h4>
        <h2 class="text-lg">₹ <%= product.price %></h2>
      </div>
      <div class="flex items-center justify-between px-2 py-3">
        <a href="/remove/<%= product._id %>" class="bg-red-200 px-3 py-4 rounded">Remove product</a>
      </div>
    <% }); %>
  </div>

  <!-- RIGHT: Price Breakdown -->
  <div class="w-[70%]">
    <h3 class="text-xl">Price Breakdown</h3>
    <div class="px-10 mt-5">
      <div class="flex mt-2">
        <h4 class="w-1/3">Total MRP</h4>
        <h4>₹ <%= totalAmount %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Discount Price</h4>
        <h4>₹ <%= discount %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Platform Fee</h4>
        <h4>₹ <%= platformFee %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Shipping Fee</h4>
        <h4><%= shippingFee === 0 ? "FREE" : "₹ " + shippingFee %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Total Discount</h4>
        <h4>₹ <%= totalDiscount1 %></h4>
      </div>
    </div>

    <div class="w-full h-[1px] bg-black mt-10"></div>

    <div class="flex justify-between px-10 mt-5">
      <div class="flex mt-5">
        <h3 class="w-1/3 text-xl">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">₹ <%= grandTotal %></h3>
      </div>
      <% if (product.length > 0) { %>
        <div class="flex items-center justify-between px-2 py-3">
          <a href="/checkout" class="bg-green-200 px-10 py-4 rounded">Check Out</a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
